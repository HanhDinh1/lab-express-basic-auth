<div id="form">
  <h2>Signup</h2>
  <form action="/signup" method="POST">

    <label for ="myUsername"> Username</label>
      <input id ="myUsername" type="text" name="username" placeholder="ironhacker" />
    
    <label for ="myPassword"> Password</label>
      <input id ="myPassword" type="password" name="password" placeholder="********" />
    
    <button type="submit">Create account</button>

{{#if errorMessage}}
   <p class="error">{{errorMessage}}</p>
{{/if}}
    
  </form>
</div>
